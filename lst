#!/usr/bin/env python3
# -*- coding: utf-8 -*-

cmd_nfo="Lista informações do banco de dados"

import argparse

from subprocess import check_output
from py_sps_cli_base import *

parser = argparse.ArgumentParser(description=cmd_nfo)
parser.add_argument("action", help="utilize uma: atd|est|prof|esoc|corr|mat")
parser.add_argument("-m", help="lista estudantes que possuam o marcador")
args = parser.parse_args()

def main():
    if args.action == 'atd':
        return listar_dicionario(db_atendimentos, [col_width_atend_time, col_width_atend_ident, ('atd_t', 0)])

    elif args.action == 'est':
        if args.m != None:
            marcador = args.m
            return listar_dicionario(db_estudantes, [col_width_etd_mat, col_width_etd_nome, col_width_etd_eml], [marcador])
        else:
            return listar_dicionario(db_estudantes, [col_width_etd_mat, col_width_etd_nome, col_width_etd_eml])

    elif args.action == 'prof':
        return listar_dicionario(db_profissionais, [col_width_prof_uid, col_width_prof_nome, col_width_prof_eml])

    elif args.action == 'esoc':
        pass

    elif args.action == 'corr':
        pass

    elif args.action == 'mat':
        return get_mat(db_estudantes)


if __name__ == '__main__':
	print(main())