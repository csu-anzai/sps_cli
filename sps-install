#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""

Cria os diret√≥rios e arquivos de dados conforme a estrutura inicialmente pensadapelo aplicativo.

Usage:
    sps-install ( createdb ) <folder>
    sps-install ( config ) 

"""

from docopt import docopt
from subprocess import getoutput
from python_modules.py_cli_decorators import check_config_existance
from python_modules.py_cli_db_creator import create_db_files, create_user_configuration

import os

args = docopt(__doc__)


@check_config_existance
def main():
    if args['config']:
        create_user_configuration()

    
    elif args['createdb']:
        create_db_files(args["<folder>"])

   

if __name__ == '__main__':
    main()
